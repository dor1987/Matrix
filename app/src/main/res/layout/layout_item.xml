<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:cardCornerRadius="20sp"
    app:cardElevation="10sp"
    android:layout_margin="10sp"
    >

    <RelativeLayout
        android:id="@+id/item_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10sp">



        <TextView
            android:id="@+id/native_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uploader:" />

        <TextView
            android:id="@+id/name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/native_name_title"
            android:text="Likes:"
            />



        <TextView
            android:id="@+id/native_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/native_name_title"
            android:layout_toRightOf="@+id/native_name_title"
            android:text="defualt" />

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/name_title"
            android:layout_toRightOf="@id/name_title"
            android:text="defualt" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_launcher"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>