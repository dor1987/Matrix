<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    app:cardCornerRadius="20sp"
    app:cardElevation="10sp"
    android:layout_margin="10sp"
    >

    <RelativeLayout
        android:id="@+id/item_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10sp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/native_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Native Name:"
                app:layout_constraintEnd_toStartOf="@+id/native_name_text"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/TextStyle"

                />

            <TextView
                android:id="@+id/native_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="defualt"
                app:layout_constraintEnd_toStartOf="@+id/name_title"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/native_name_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <TextView
                android:id="@+id/name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                app:layout_constraintEnd_toStartOf="@+id/name_text"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/native_name_text"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="20dp"
                style="@style/TextStyle"

                />


            <TextView
                android:id="@+id/name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="defualt"
                app:layout_constraintEnd_toStartOf="@+id/native_name_title"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/name_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </android.support.constraint.ConstraintLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>